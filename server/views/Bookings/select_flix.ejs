<%- include('../Includes/header.ejs') %>

<body>
	<%- include('../Includes/nav.ejs') %>
	<div class="content row">
		<div class="column-3">
			<div class="arrow bg-red">
				Select Flix
			</div>
		</div>
		<div class="column-3">
			<div class="arrow silver-bg">
				Show Time
			</div>
		</div>
		<div class="column-3">
			<div class="arrow silver-bg">
				Select Seat
			</div>
		</div>
		<div class="column-3">
			<div class="arrow silver-bg">
				Confirm Payment
			</div>
		</div>
	</div>
	<div class="content">
		<div class="row">
			<input type="search" placeholder="Enter Flix Name" id="searchmovie" class="input-text full-width">
			<select class="input-text">
				<option>Region</option>
				<option value="Mumbai West">Mumbai West</option>
				<option value="Mumbai South">Mumbai South</option>
				<option value="Mumbai North">Mumbai North</option>
				<option value="Mumbai East">Mumbai East</option>
				<option value="Vasai">Vasai</option>
				<option value="Thane">Thane</option>
				<option value="Others">Others</option>
			</select>
			<button class="red-btn">Search</button>
		</div>
		<% if (theater.length == 0) {%>

		<div style="height: 180px; width: 600px;background-color: crimson;text-align: center;margin: auto;">
			<h1 align="center" style="color: white;padding-top: 7%;">SORRY &#128533;<h1 style="color: wheat;"> No theaters available</h1></h1>
		</div>
		<% } else { %>
		<% for (x in theater) { %>
		<div class="row card">
			<div class="column-4 border-right content-card">
				<img src="/public/img/seat.png" width="80%">
			</div>
			<div class="column-8 content-card">
				<h2 class="card-header"> <%= theater[x].name%></h2>
				Rating: <span><%= theater[x].rating%> </span>&#9733; <br />
				<p class="border">Now Showing: <% for (y in theater[x].movies) { %><a
						href="#"><br /><%=theater[x].movies[y].name%>
					</a>
					<%}%></p>

				<p class="border"><i class="fa fa-home" style="font-size:30px;color:red"></i> Address: <%= theater[x].location%>
				</p>
				<div align="right">
					<a href="/user/select_time?theater=<%=theater[x].t_id%>&movie=<%= movieId %>"><button class="btn-curved btn-book-now" onclick="saveFlix('<%=theater[x].t_id%>')"> Proceed </button>
				</div>
			</div>
		</div>
		<% } %>
	<% } %> 
	</div>
	<%- include('../Includes/footer.ejs') %>
	<script type="text/javascript">
		function saveFlix(id){
			let ticket = JSON.parse(localStorage.getItem('ticket'));
			ticket.flix_id = id;
			localStorage.setItem('ticket',JSON.stringify(ticket));
			window.location.href =`/user/select_time?theater=${ticket.flix_id}&movie=${ticket.movie_id}`;
		}
	</script>
</body>

</html>