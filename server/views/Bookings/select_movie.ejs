<%- include('../Includes/header.ejs') %>

<body>
	<%- include('../Includes/nav.ejs') %>
	<div class="content row">
		<div class="column-3">
			<div class="arrow bg-red">
				Select Movie
			</div>
		</div>
		<div class="column-3">
			<div class="arrow silver-bg">
				Show Time
			</div>
		</div>
		<div class="column-3">
			<div class="arrow silver-bg">
				Select Seat
			</div>
		</div>
		<div class="column-3">
			<div class="arrow silver-bg">
				Confirm Payment
			</div>
		</div>
	</div>
	<div class="row">
		<div class="content">

			<div class="row">
				<input type="search" placeholder="Enter Movie Name" id="searchmovie" class="input-text full-width">
				<select class="input-text">
					<option>Language</option>
					<option value="Hindi">Hindi</option>
					<option value="English">English</option>
					<option value="Tamil">Tamil</option>
					<option value="Telugu">Telugu</option>
					<option value="Others">Others</option>
				</select>
				<select class="input-text">
					<option>Genre</option>
					<option value="Action">Action</option>
					<option value="Drama">Drama</option>
					<option value="Romance">Romance</option>
					<option value="Comedy">Comedy</option>
					<option value="Thriller">Thriller</option>
					<option value="Suspence">Suspence</option>
				</select>
				<button class="red-btn">Search</button>
			</div>
			<% if (movies.length == 0) {%>

				<div style="height: 180px; width: 600px;background-color: crimson;text-align: center;margin: auto;">
					<h1 align="center" style="color: white;padding-top: 7%;">SORRY &#128533;<h1 style="color: wheat;"> No movies available</h1></h1>
				</div>
			<% } else { %>

			<% for (x in movies) { %>
			<div class="row card">
				<div class="column-4 border-right content-card">
					<img src="https://picsum.photos/220?random=<%= movies[x].name%>" width="80%">
				</div>
				<div class="column-8 content-card">
					<h2 class="card-header"> <%= movies[x].name%></h2>
					<h3>Release date :<%=  movies[x].release_date%></h3>

					<h3>Language: <%= movies[x].language%></h3>
					Directed by: <a href="https://www.imdb.com/search/name/?name="> Director Name </a> <br />
				Actors: <% for (i in movies[x]) { %> <a href="https://www.imdb.com/search/name/?name=<%= movies[x][i].name %>"><%= movies[x][i].name %></a> , <% } %>
					<p> Description. Lorem ipsum cillum nostrud ullamco dolor est magna magna ut commodo fugiat enim ad
						ut. Magna sunt elit cupidatat esse duis ut sed est magna laboris est.</p>
					<div align="right">
						<button class="btn-curved btn-red btn-book-now" onclick="saveMovie('<%= movies[x].m_id %>')"> Book Now!
							</button></a>
					</div>
				</div>
			</div>
			<% } %>
			<% } %>
		</div>
	</div>
	<%- include('../Includes/footer.ejs') %>
	<script type="text/javascript">
		function saveMovie(id){
			let ticket = JSON.parse(localStorage.getItem('ticket'));
			ticket.movie_id = id;
			localStorage.setItem('ticket',JSON.stringify(ticket));
			window.location.href =`/user/select_time?theater=${ticket.flix_id}&movie=${ticket.movie_id}`;
		}
	</script>
</body>

</html>