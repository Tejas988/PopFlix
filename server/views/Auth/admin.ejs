<%- include('../Includes/header.ejs') %>

<body>
<%- include('../Includes/nav.ejs') %>
<div style="background: #f12711; 
background: -webkit-linear-gradient(to right, #883333, #f12711); 
background: linear-gradient(to right, #883333, #f12711);width: 100%;">
    <h1 style="margin-left: 3%;margin-right: 3%;padding-top: 3%; color:white;">ADMIN Dashboard</h1>
    <hr style="margin-left: 3%;margin-right: 3%;"/>
    <div class="row-fluid">
        <div class="column-6 popfile" align="center"  id="p2" style="margin-top:1%">
            <h1  style="margin-bottom: 3%;margin-top: 3%;color: blanchedalmond;">
               ADD MOVIE
            </h1>
        <form action="/admin/movie" method="POST" >
            <label for="fname" style="font-size:medium; color:#b3b3b3;margin-bottom: 5%;" >Movie Name</label><br/>
            <input class="inp" type="text"  name="name"><br><br>
            <label for="release_date"  style="font-size:medium ;color:#b3b3b3; margin-bottom: 5%;" >Release Date</label><br/>
            <input type="date" class="inp" id="release_date" name="release_date"><br/><br>
            <label for="release_date"  style="font-size:medium ;color:#b3b3b3; margin-bottom: 5%;" >Language</label><br/>
            <select name="language" class="inp" style="padding-left: 8%;padding-right: 8%;">
                <option value="EN">English</option>
                <option value="Hi">Hindi</option>
                <option value="Ma">Marathi</option>
                <option value="Gj">Gujrati</option>
              </select><br><br>
            <label for="lname"  style="font-size:medium ;color:#b3b3b3;margin-bottom: 5%;" >Image</label><br/><br/>
            <label for="file-upload" class="custom-file-upload">
                <i class="fa fa-cloud-upload"></i> &#x1F4C1; Movie Poster Upload
            </label><br/>
            <input id="file-upload" type="file" />
            <h3  style="margin-top: 8%;margin-bottom: 4%;"align="center"><button class="btn-curved bg-red signup" onclick="showUpdate()">ADD MOVIE</button></h3>
          </form>
        </div>
       
            <div class="column-6 popfile" align="center"  id="p2" style="margin-top:1%">
                <h1  style="margin-bottom: 3%;margin-top: 3%;color: blanchedalmond;">
                   ADD FLIX
                </h1>
            <form action="/admin/theater" method="POST" >
                <label for="fname" style="font-size:medium; color:#b3b3b3;margin-bottom: 5%;" >Theater Name</label><br/>
                <input class="inp" type="text"  name="name"><br><br>
                <label for="release_date"  style="font-size:medium ;color:#b3b3b3; margin-bottom: 5%;" >Location</label><br/>
                <input type="text" class="inp" id="location" name="location"><br/><br>
                <label for="release_date"  style="font-size:medium ;color:#b3b3b3; margin-bottom: 5%;" >Rating</label><br/>
                <input type="number" step="0.1" class="inp" id="location" name="rating" ><br/><br>
                <label for="lname"  style="font-size:medium ;color:#b3b3b3;margin-bottom: 5%;" >Image</label><br/><br/>
                <label for="file-upload" class="custom-file-upload">
                    <i class="fa fa-cloud-upload"></i> &#x1F4C1; Flix Image Upload
                </label><br/>
                <input id="file-upload" type="file" />
                <h3  style="margin-top: 8%;margin-bottom: 4%;"align="center"><button class="btn-curved bg-red signup" onclick="showUpdate()">ADD FLIX</button></h3>
              </form>
            </div>
        </div>
</div>
     

<%- include('../Includes/footer.ejs') %> 
</body>    
</html>