<%- include('../Includes/header.ejs') %>
<style type="text/css">
	.movie-name-review {
		border-left: 10px solid #f00;
		border-radius: 14px;
		padding: 20px;
		padding-left: 4%;
	}

	.comments {
		border-left: 10px solid #ccc;
		border-radius: 14px;
		padding: 20px;
		padding-left: 4%;
		margin-top: 30px;
	}

	.comment-header {
		font-size: x-large;
		padding-bottom: 5px;
	}

	.name-avatar {
		border-radius: 50%;
		padding: 2px 14px;
		margin-right: 4px;
		background-color: #f00;
		color: white;
	}
</style>

<body>
	<%- include('../Includes/nav.ejs') %>
	<div class="content" style="padding-left: 10%;padding-right: 10%">

		<div class="card movie-name-review">
			<% if (review.length>0){ %>

			<div class="card-header">
				<%=movie[0].name%>
			</div>
			<div class="card-content">
				<br />
				<b>Date:</b> <%=movie[0].release_date%>
				<br />
				Actor <br />
				<b>Movie description:</b> Movie description: Movie description: Movie description: Movie description:
				Movie
				description: Ut tempor et minim id occaecat qui fugiat est ea quis qui sunt consequat aute dolore
				officia nisi fugiat deserunt anim anim culpa commodo ut eu qui ullamco incididunt.
			</div>
			<% for(x in review){ %>
			<div class="card comments">
				<div class="card-header comment-header">
					<span class="name-avatar"><%=review[x].name.charAt(0)%></span><%= review[x].name %>
				</div>
				<div class="card-content">
					<br />
					<%= review[x].description%>
				</div>
			</div>
			<%}%>
			<% }else { %>

		</div>
		<div class="card movie-name-review">No Reviews Available</div>
		<%}%>
	</div>

	<%- include('../Includes/footer.ejs') %>
</body>

</html>